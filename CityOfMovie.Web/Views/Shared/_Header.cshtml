
<header>
    <div class="row">
        <div class="col-6">
            <ul id="navbar">
                <li class="navbarItems"><a asp-controller="Home" asp-action="Home" class="navbarLinks">خانه</a></li>
                <li class="navbarItems"><a class="navbarLinks" href="/Admin">پنل مدیریت</a></li>
                <li class="navbarItems"></li>
            </ul>
        </div>
        <div class="col-6">
            <div class="Search-box d-flex">
                <form method="post" asp-action="Login">
                    <div class="dropdown" id="nav-user-icon">
